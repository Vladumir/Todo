<Window x:Class="Desktop.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registration" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="White" ResizeMode="NoResize">

    <Window.Resources>
        <!-- Стиль для кнопок -->
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Шаблон для TextBox с Watermark -->
        <ControlTemplate x:Key="WatermarkTextBox" TargetType="TextBox">
            <Grid>
                <Border BorderBrush="#DDD" BorderThickness="0,0,0,1"/>
                <ScrollViewer x:Name="PART_ContentHost"
                              HorizontalScrollBarVisibility="Hidden"
                              VerticalScrollBarVisibility="Hidden"/>
                <TextBlock Text="{TemplateBinding Tag}"
                           Foreground="LightGray"
                           Margin="2,4,0,0"
                           IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </Trigger>
                                <Trigger Property="Text" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </Trigger>
                                <Trigger Property="Text" Value="{x:Static sys:String.Empty}" 
                                         xmlns:sys="clr-namespace:System;assembly=mscorlib">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </Trigger>
                                <Trigger Property="Text" Value="*">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </ControlTemplate>

        <!-- Шаблон для PasswordBox с Watermark -->
        <ControlTemplate x:Key="WatermarkPasswordBox" TargetType="PasswordBox">
            <Grid>
                <Border BorderBrush="#DDD" BorderThickness="0,0,0,1"/>
                <ScrollViewer x:Name="PART_ContentHost"
                              HorizontalScrollBarVisibility="Hidden"
                              VerticalScrollBarVisibility="Hidden"
                              Focusable="False"/>
                <TextBlock Text="{TemplateBinding Tag}"
                           Foreground="LightGray"
                           Margin="2,4,0,0"
                           IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=Password.Length,
                                                                RelativeSource={RelativeSource TemplatedParent}}"
                                             Value="0">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=Password.Length,
                                                                RelativeSource={RelativeSource TemplatedParent}}"
                                             Value="1">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </ControlTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая часть (логотип) -->
        <Grid Grid.Column="0" Background="White">
            <Image Source="/Desktop;component/images/logo.png"
                   Width="140" Height="140"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top" Margin="0,100,0,0"/>
        </Grid>

        <!-- Правая часть (форма регистрации) -->
        <StackPanel Grid.Column="1" Margin="40,0,40,0" VerticalAlignment="Center">
            <TextBlock Text="Welcome back"
                       FontSize="24" FontWeight="SemiBold"
                       Foreground="#222" Margin="0,0,0,30"/>

            <!-- Имя пользователя -->
            <TextBlock Text="Имя пользователя" FontSize="14" FontWeight="SemiBold" Foreground="#333"/>
            <TextBox Margin="0,6,0,20"
                     Template="{StaticResource WatermarkTextBox}"
                     Tag="Введите имя пользователя"/>

            <!-- Почта -->
            <TextBlock Text="Ваша почта" FontSize="14" FontWeight="SemiBold" Foreground="#333"/>
            <TextBox Margin="0,6,0,20"
                     Template="{StaticResource WatermarkTextBox}"
                     Tag="exam@yandex.ru"/>

            <!-- Пароль -->
            <TextBlock Text="Пароль" FontSize="14" FontWeight="SemiBold" Foreground="#333"/>
            <PasswordBox Margin="0,6,0,20"
                         Template="{StaticResource WatermarkPasswordBox}"
                         Tag="Введите пароль"/>

            <!-- Повторите пароль -->
            <TextBlock Text="Повторите пароль" FontSize="14" FontWeight="SemiBold" Foreground="#333"/>
            <PasswordBox Margin="0,6,0,30"
                         Template="{StaticResource WatermarkPasswordBox}"
                         Tag="Повторите пароль"/>

            <!-- Кнопки -->
            <Button Content="Зарегистрироваться"
                    Margin="0,0,0,12"
                    Background="#F25B5B"
                    Style="{StaticResource RoundedButton}"/>
            <Button Content="Назад"
                    Background="#F46D6D"
                    Style="{StaticResource RoundedButton}"/>
        </StackPanel>
    </Grid>
</Window>
