<Page x:Class="Desktop.View.AddTaskPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Создание задачи"
      Height="520"
      Width="880"
      Background="#DDDDDD">

    <Grid Margin="30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая часть -->
        <StackPanel Grid.Column="0" Margin="0,10,30,0">

            <!-- Название -->
            <TextBlock Text="Название"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Margin="0,0,0,5"/>
            <Border Height="50" Background="White" CornerRadius="10">
                <TextBox x:Name="TitleBox"
                         FontSize="16"
                         Padding="10"
                         BorderThickness="0"
                         Background="Transparent"
                         VerticalContentAlignment="Center"/>
            </Border>

            <!-- Категория (ИЗМЕНЕНО НА COMBOBOX) -->
            <TextBlock Text="Категория"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Margin="0,25,0,5"/>
            <Border Height="50" Background="White" CornerRadius="10">
                <ComboBox x:Name="CategoryBox"
                          FontSize="16"
                          BorderThickness="0"
                          Background="Transparent"
                          VerticalContentAlignment="Center"
                          Padding="10,12,0,0">
                    <ComboBoxItem Content="Дом"/>
                    <ComboBoxItem Content="Работа"/>
                    <ComboBoxItem Content="Учеба"/>
                    <ComboBoxItem Content="Отдых"/>
                </ComboBox>
            </Border>

            <!-- Описание -->
            <TextBlock Text="Описание"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Margin="0,25,0,5"/>
            <Border Height="120" Background="White" CornerRadius="10">
                <TextBox x:Name="DescriptionBox"
                         FontSize="16"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Padding="10"
                         BorderThickness="0"
                         Background="Transparent"/>
            </Border>
        </StackPanel>

        <!-- Правая часть -->
        <StackPanel Grid.Column="1">

            <!-- DatePicker -->
            <Border Height="200" BorderBrush="Black" BorderThickness="1" Margin="0,10,0,0">
                <Grid>
                    <TextBlock Text="Дата" FontSize="14" Margin="10,10,0,0"/>
                    <DatePicker x:Name="DatePickerTask"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                FontSize="16"/>
                </Grid>
            </Border>

            <!-- TimePicker -->
            <Border Height="80" BorderBrush="Black" BorderThickness="1" Margin="0,20,0,0">
                <Grid>
                    <TextBlock Text="Время" FontSize="14" Margin="10,10,0,0"/>
                    <ComboBox x:Name="TimeBox"
                              Width="160"
                              Height="36"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Center"
                              FontSize="16">
                        <ComboBoxItem Content="00:00"/>
                        <ComboBoxItem Content="01:00"/>
                        <ComboBoxItem Content="02:00"/>
                        <ComboBoxItem Content="03:00"/>
                        <ComboBoxItem Content="04:00"/>
                        <ComboBoxItem Content="05:00"/>
                        <ComboBoxItem Content="06:00"/>
                        <ComboBoxItem Content="07:00"/>
                        <ComboBoxItem Content="08:00"/>
                        <ComboBoxItem Content="09:00"/>
                        <ComboBoxItem Content="10:00"/>
                        <ComboBoxItem Content="11:00"/>
                        <ComboBoxItem Content="12:00"/>
                        <ComboBoxItem Content="13:00"/>
                        <ComboBoxItem Content="14:00"/>
                        <ComboBoxItem Content="15:00"/>
                        <ComboBoxItem Content="16:00"/>
                        <ComboBoxItem Content="17:00"/>
                        <ComboBoxItem Content="18:00"/>
                        <ComboBoxItem Content="19:00"/>
                        <ComboBoxItem Content="20:00"/>
                        <ComboBoxItem Content="21:00"/>
                        <ComboBoxItem Content="22:00"/>
                        <ComboBoxItem Content="23:00"/>
                    </ComboBox>
                </Grid>
            </Border>

            <!-- Кнопки -->
            <StackPanel Orientation="Horizontal" Margin="0,30,0,0" HorizontalAlignment="Center">
                <Button Content="Создать"
                        Width="260"
                        Height="50"
                        Background="#4CAF50"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Margin="0,0,20,0"
                        Click="Create_Click"/>
                <Button Content="Отмена"
                        Width="260"
                        Height="50"
                        Background="#E53935"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
