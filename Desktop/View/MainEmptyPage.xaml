<Page x:Class="Desktop.View.MainEmptyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Desktop.View"
      mc:Ignorable="d" 
      Title="MainEmpty" Height="460" Width="730"
      Background="White">

    <Page.Resources>
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Background="#333333">
            <Grid VerticalAlignment="Top" Height="130" Background="#E6E6E6">
                <StackPanel VerticalAlignment="Top" Margin="12,18,12,0">
                    <Button Content="Выход"
                            Click="Exit_Click"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="Black"
                            FontSize="13"
                            HorizontalAlignment="Left"
                            Padding="0"
                            Cursor="Hand"/>

                    <Button Content="Изменить&#10;фото&#10;профиля"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="Black"
                            FontSize="13"
                            Margin="0,8,0,0"
                            HorizontalAlignment="Left"
                            Padding="0"
                            Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Grid>

        <Grid Grid.Column="1" Background="White">

            <Image Source="/Desktop;component/images/avatar.png"
                   Width="64" Height="64"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="20,20,0,0"
                   Stretch="UniformToFill"/>

            <Grid>
                <StackPanel VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Margin="70,-55,0,0">
                    <TextBlock Text="Добро пожаловать!"
                               FontSize="26"
                               FontWeight="SemiBold"
                               Foreground="Black"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Создайте свою первую задачу!"
                               FontSize="20"
                               Foreground="Black"
                               Margin="0,0,0,24"/>
                </StackPanel>

                <Button Content="Создать первую задачу"
                        Width="220"
                        Background="#FF6E6E"
                        Style="{StaticResource RoundedButton}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0,120,0,0" Click="Button_Click"/>
            </Grid>
        </Grid>
    </Grid>
</Page>
