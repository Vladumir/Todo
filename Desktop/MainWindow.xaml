<Window x:Class="TodoDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Todo" Width="1200" Height="750"
        Background="White" WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI">

    <Window.Resources>

        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Height" Value="48"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="16,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="TaskItemTemplate">
            <Border x:Name="Card"
                    Background="#F8F8FF"
                    CornerRadius="8"
                    Padding="12"
                    Margin="0 8">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="44"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>


                    <CheckBox IsChecked="{Binding IsDone}" 
          Width="24" 
          Height="24"
          VerticalAlignment="Center" 
          HorizontalAlignment="Center">
                        <CheckBox.Template>
                            <ControlTemplate TargetType="CheckBox">

                                <Grid Width="24" Height="24" Background="Transparent">
                                    <Ellipse Stroke="#5A6AFF" 
                         StrokeThickness="2" 
                         Fill="Transparent"/>

                                    <Path x:Name="CheckMark"
                      Visibility="Collapsed"
                      Data="M2,8 L6,12 L14,2"
                      Stroke="#5A6AFF"
                      StrokeThickness="2"
                      StrokeStartLineCap="Round"
                      StrokeEndLineCap="Round"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Margin="1,1,0,0"/>

                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="CheckMark"
                            Property="Visibility"
                            Value="Visible"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </CheckBox.Template>
                    </CheckBox>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="{Binding Title}"
                                   FontSize="16"
                                   FontWeight="SemiBold"/>

                        <TextBlock Text="{Binding Date, StringFormat='{}{0:dd MMMM yyyy}'}"
                                   FontSize="12"
                                   Opacity="0.6"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <TextBlock Grid.Column="2"
                               Text="{Binding Date, StringFormat='{}{0:HH:mm}'}"
                               VerticalAlignment="Center"
                               Opacity="0.6"
                               Margin="12,0,6,0"/>
                </Grid>
            </Border>

            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}"
                             Value="True">
                    <Setter TargetName="Card" Property="Background" Value="#E9E9FF"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

    </Window.Resources>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="380"/>
        </Grid.ColumnDefinitions>


        <Border Grid.Column="0" Background="#FBF9F9">
            <StackPanel Margin="20">

                <StackPanel HorizontalAlignment="Center">
                    <Border Width="92" Height="92" CornerRadius="46" Background="#F0F0F0">
                        <Image Source="/Desktop;component/images/avatar.png"
                               Stretch="UniformToFill"/>
                    </Border>

                    <TextBlock Text="{Binding CurrentUserName}"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,12,0,8"
                               HorizontalAlignment="Center"/>

                    <StackPanel>
                        <TextBlock Text="Задачи"
                                   FontSize="16"
                                   Padding="6"
                                   Foreground="#7A2E2E"/>
                        <TextBlock Text="История"
                                   FontSize="16"
                                   Padding="6"
                                   MouseLeftButtonUp="History_Click"
                                   Opacity="0.6"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel VerticalAlignment="Bottom" Margin="0,400,0,0">
                    <Button Width="60" Height="60"
                            Content="+"
                            Background="#F28888"
                            Foreground="White"
                            FontSize="28"
                            FontWeight="Bold" Click="Button_Click"/>
                </StackPanel>

            </StackPanel>
        </Border>


        <Grid Grid.Column="1" Margin="18">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Margin="12,8">
                <TextBlock Text="Дом" Foreground="#6FBF2B" FontSize="18" Margin="0,0,24,0"/>
                <TextBlock Text="Работа" Foreground="#FF6B35" FontSize="18" Margin="0,0,24,0"/>
                <TextBlock Text="Учеба" Foreground="#3B6BFF" FontSize="18" Margin="0,0,24,0"/>
                <TextBlock Text="Отдых" Foreground="#C04CFF" FontSize="18"/>
            </StackPanel>

            <Border Grid.Row="1" Padding="6">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ListBox ItemsSource="{Binding Tasks}"
                             SelectedItem="{Binding SelectedTask}"
                             BorderThickness="0"
                             ItemTemplate="{StaticResource TaskItemTemplate}"/>
                </ScrollViewer>
            </Border>
        </Grid>


        <Border Grid.Column="2"
                Margin="12"
                Background="White"
                CornerRadius="6"
                Padding="22">

            <Border.Effect>
                <DropShadowEffect Color="#333" Opacity="0.12" BlurRadius="12" ShadowDepth="4"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="{Binding SelectedTask.Title}"
                           FontSize="28"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Margin="0,4,0,12"/>

                <StackPanel Grid.Row="1">
                    <TextBlock Text="{Binding SelectedTask.Date, StringFormat='{}{0:HH:mm}'}"
                               FontSize="14"
                               FontWeight="SemiBold"/>

                    <TextBlock Text="{Binding SelectedTask.Date, StringFormat='{}{0:dd MMMM yyyy}'}"
                               FontSize="14"
                               Opacity="0.8"
                               Margin="0,6,0,18"/>

                    <TextBlock Text="{Binding SelectedTask.Description}"
                               TextWrapping="Wrap"
                               FontSize="16"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Margin="0,18,0,0">
                    <Button Style="{StaticResource RoundedButton}"
                            Background="#F07A7A"
                            Content="Готово"
                            Click="DoneButton_Click"
                            Margin="0,0,0,8"/>

                    <Button Style="{StaticResource RoundedButton}"
                            Background="#F07A7A"
                            Content="Удалить"
                            Click="DeleteButton_Click"/>
                </StackPanel>
            </Grid>

        </Border>
    </Grid>
</Window>
